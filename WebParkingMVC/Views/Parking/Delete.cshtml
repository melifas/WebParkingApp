@model LibraryWebParking.Model.Parkings

<h3>Είστε σίγουροι για την διαγραφή της παρακάτω Θέσης</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ParkingNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ParkingNumber)
        </dd>       

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Διαγραφή" class="btn btn-default" />
            @Html.ActionLink("Πίσω στις θέσεις", "SeeAllParkings")
            @if (ViewBag.Message != null)
            {
                <script type="text/javascript">
                    window.onload = function () {
                        alert("@ViewBag.Message");
                    }
                </script>
            }|

        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
}
